<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Patch appropriate weapons to be usable with shields -->
    <Operation Class="PatchOperationAddModExtension">
        <xpath>/Defs/ThingDef[defName="Gun_Revolver"]</xpath>
        <value>
            <li Class="VEF.Things.ThingDefExtension">
                <usableWithShields>true</usableWithShields>
            </li>
        </value>
    </Operation>

    <Operation Class="PatchOperationAddModExtension">
        <xpath>/Defs/ThingDef[defName="Gun_Autopistol"]</xpath>
        <value>
            <li Class="VEF.Things.ThingDefExtension">
                <usableWithShields>true</usableWithShields>
            </li>
        </value>
    </Operation>

    <Operation Class="PatchOperationAddModExtension">
        <xpath>/Defs/ThingDef[defName="Gun_MachinePistol"]</xpath>
        <value>
            <li Class="VEF.Things.ThingDefExtension">
                <usableWithShields>true</usableWithShields>
            </li>
        </value>
    </Operation>

</Patch>